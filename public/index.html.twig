    <div id="wrapper">
          <section id="power" class="active">
            <div class="active">
                <img class="pulse" src="img/power.png" alt="">
                <h1>
                  <span class="animated slideInLeft">Turn power on</span>
                </h1>
            </div>
            <div>
                <img src="img/logo.png" alt="">
                <h1>
                  <span class="animated slideInLeft">Recycool is <strong>Active</strong></span>
                </h1>
            </div>
            
          </section>


          <section id="recycool" >
            <input data-width="150"
data-fgColor="#ffec03"
data-skin="tron"
data-thickness=".1"
data-displayPrevious=true type="text" value="0" class="dial">
          </section>
        </div>
    </div>

